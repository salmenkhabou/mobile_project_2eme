<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_tip"
    android:layout_width="280dp"
    android:layout_height="140dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header avec emoji et titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_tip_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_tip_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’§ Hydratation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_tip_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Commencez la semaine en buvant un grand verre d'eau au rÃ©veil"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Indicateur de lecture -->
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@color/primary_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
