<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MeditationActivity">

    <!-- Modern App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Meditation"
            app:titleTextColor="@color/on_surface"
            app:titleTextAppearance="@style/Text.Headline.Medium"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/on_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding">            <!-- Modern Meditation Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_spacing"
                style="@style/Card.Primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding_large"
                    android:gravity="center"
                    android:background="@drawable/header_gradient">

                    <!-- Meditation Icon -->
                    <ImageView
                        android:id="@+id/imgMeditationIcon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="@dimen/space_lg"
                        android:src="@drawable/ic_meditation"
                        app:tint="@color/on_primary_container" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find Your Inner Peace"
                        android:textAppearance="@style/Text.Display.Small"
                        android:textColor="@color/on_primary_container"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:textAlignment="center" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a moment to breathe and relax"
                        android:textAppearance="@style/Text.Body.Large"
                        android:textColor="@color/on_primary_container"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/space_md" />

                    <!-- Session Info -->
                    <TextView
                        android:id="@+id/tvSessionInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today: 0 minutes"
                        android:textAppearance="@style/Text.Body.Medium"
                        android:textColor="@color/on_primary_container"
                        android:drawableStart="@drawable/ic_timer"
                        android:drawableTint="@color/on_primary_container"
                        android:drawablePadding="@dimen/space_xs"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>            <!-- Modern Quick Sessions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/space_lg">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quick Sessions"
                    android:textAppearance="@style/Text.Headline.Small"
                    android:textColor="@color/on_surface" />

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="@dimen/section_spacing">

                <!-- 3 Minute Session -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card3Min"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/space_sm"
                    style="@style/Card.HealthMetric"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/space_md"
                        android:background="@drawable/metric_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textAppearance="@style/Text.Display.Large"
                            android:textColor="@color/meditation_primary"
                            android:layout_marginBottom="@dimen/space_xs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minutes"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Calm"
                            android:textAppearance="@style/Text.Label.Medium"
                            android:textColor="@color/on_surface"
                            android:layout_marginTop="@dimen/space_sm"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 5 Minute Session -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card5Min"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/space_xs"
                    style="@style/Card.HealthMetric"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/space_md"
                        android:background="@drawable/metric_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textAppearance="@style/Text.Display.Large"
                            android:textColor="@color/accent"
                            android:layout_marginBottom="@dimen/space_xs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minutes"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Peace"
                            android:textAppearance="@style/Text.Label.Medium"
                            android:textColor="@color/on_surface"
                            android:layout_marginTop="@dimen/space_sm"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 10 Minute Session -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card10Min"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    style="@style/Card.HealthMetric"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/space_md"
                        android:background="@drawable/metric_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textAppearance="@style/Text.Display.Large"
                            android:textColor="@color/success"
                            android:layout_marginBottom="@dimen/space_xs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minutes"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Focus"
                            android:textAppearance="@style/Text.Label.Medium"
                            android:textColor="@color/on_surface"
                            android:layout_marginTop="@dimen/space_sm"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>            <!-- Modern Progress Statistics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/space_lg">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Progress"
                    android:textAppearance="@style/Text.Headline.Small"
                    android:textColor="@color/on_surface" />

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_analytics"
                    app:tint="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/section_spacing"
                android:weightSum="2">

                <!-- Streak Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/space_sm"
                    style="@style/Card.HealthMetric">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/content_padding"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:src="@drawable/ic_streak"
                            app:tint="@color/accent"
                            android:layout_marginBottom="@dimen/space_md" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Streak"
                            android:textAppearance="@style/Text.Label.Medium"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tvMeditationStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textAppearance="@style/Text.Headline.Medium"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Total Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    style="@style/Card.HealthMetric">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/content_padding"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:src="@drawable/ic_timer"
                            app:tint="@color/meditation_primary"
                            android:layout_marginBottom="@dimen/space_md" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Time"
                            android:textAppearance="@style/Text.Label.Medium"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tvTotalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 min"
                            android:textAppearance="@style/Text.Headline.Medium"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>            <!-- Modern Guided Meditations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/space_lg">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guided Meditations"
                    android:textAppearance="@style/Text.Headline.Small"
                    android:textColor="@color/on_surface" />

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_meditation"
                    app:tint="@color/primary" />

            </LinearLayout>

            <!-- Breathing Exercise -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBreathing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                style="@style/Card.Action"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/content_padding"
                    android:gravity="center_vertical"
                    android:background="@drawable/metric_background">

                    <ImageView
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:src="@drawable/ic_lungs"
                        app:tint="@color/primary"
                        android:layout_marginEnd="@dimen/space_lg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breathing Exercise"
                            android:textAppearance="@style/Text.Title.Medium"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4-7-8 breathing technique for relaxation"
                            android:textAppearance="@style/Text.Body.Small"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginTop="@dimen/space_xs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textAppearance="@style/Text.Title.Large"
                            android:textColor="@color/primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="min"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mindfulness -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMindfulness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                style="@style/Card.Action"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/content_padding"
                    android:gravity="center_vertical"
                    android:background="@drawable/metric_background">

                    <ImageView
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:src="@drawable/ic_mindfulness"
                        app:tint="@color/accent"
                        android:layout_marginEnd="@dimen/space_lg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mindfulness Practice"
                            android:textAppearance="@style/Text.Title.Medium"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Present moment awareness meditation"
                            android:textAppearance="@style/Text.Body.Small"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginTop="@dimen/space_xs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textAppearance="@style/Text.Title.Large"
                            android:textColor="@color/accent"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="min"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sleep Meditation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_lg"
                style="@style/Card.Action"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/content_padding"
                    android:gravity="center_vertical"
                    android:background="@drawable/metric_background">

                    <ImageView
                        android:layout_width="@dimen/icon_size_xlarge"
                        android:layout_height="@dimen/icon_size_xlarge"
                        android:src="@drawable/ic_sleep_meditation"
                        app:tint="@color/sleep_primary"
                        android:layout_marginEnd="@dimen/space_lg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Meditation"
                            android:textAppearance="@style/Text.Title.Medium"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guided meditation for better sleep"
                            android:textAppearance="@style/Text.Body.Small"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginTop="@dimen/space_xs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textAppearance="@style/Text.Title.Large"
                            android:textColor="@color/sleep_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="min"
                            android:textAppearance="@style/Text.Label.Small"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
