<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SleepTrackerActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Sleep Tracker"
            app:titleTextColor="@color/on_surface"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/on_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding">

            <!-- Sleep Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSleepStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_spacing"
                style="@style/Card.Primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ™ Sleep Overview"
                        android:textAppearance="@style/Text.Headline.Medium"
                        android:textColor="@color/sleep_primary"
                        android:layout_marginBottom="@dimen/space_md" />

                    <ProgressBar
                        android:id="@+id/progressSleep"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="@color/sleep_primary"
                        android:layout_marginBottom="@dimen/space_md" />

                    <TextView
                        android:id="@+id/tvSleepDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 0h 00m"
                        android:textAppearance="@style/Text.Headline.Small"
                        android:textAlignment="center"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="@dimen/space_sm" />

                    <TextView
                        android:id="@+id/tvSleepQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quality: Not set"
                        android:textAppearance="@style/Text.Body.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sleep Times -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/section_spacing"
                android:baselineAligned="false">

                <!-- Bedtime Card -->                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/space_sm"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/content_padding">

                        <TextView
                            android:id="@+id/tvBedTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bedtime: 22:00"
                            android:textAppearance="@style/Text.Body.Medium"
                            android:textAlignment="center"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="@dimen/space_sm" />                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSetBedTime"
                            style="@style/Button.Secondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Bedtime"
                            android:textSize="12sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Wake Time Card -->                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/content_padding">

                        <TextView
                            android:id="@+id/tvWakeTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wake time: 07:00"
                            android:textAppearance="@style/Text.Body.Medium"
                            android:textAlignment="center"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="@dimen/space_sm" />                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSetWakeTime"
                            style="@style/Button.Secondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Wake Time"
                            android:textSize="12sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Log Sleep Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogSleep"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_spacing"
                android:text="Log Today's Sleep"
                app:icon="@drawable/ic_sleep" />

            <!-- Tips Card -->            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSleepTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sleep Tips"
                        android:textAppearance="@style/Text.Title.Medium"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="@dimen/space_md" />

                    <TextView
                        android:id="@+id/tvSleepTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading tips..."
                        android:textAppearance="@style/Text.Body.Medium"
                        android:textColor="@color/on_surface_variant"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
