<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash_background"
    tools:context=".SplashActivity">    <!-- Main Content Container - Responsive -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/layout_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Health Icon - Responsive Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒŸ"
            android:textSize="@dimen/splash_icon_size"
            android:layout_marginBottom="@dimen/section_margin_top" />        <TextView
            android:id="@+id/tv_splash_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Tracker"
            android:textSize="@dimen/splash_title_size"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/section_margin_bottom" />

        <TextView
            android:id="@+id/tv_splash_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre compagnon santÃ© quotidien"
            android:textSize="@dimen/splash_subtitle_size"
            android:textColor="@color/text_on_primary"
            android:fontFamily="sans-serif"
            android:alpha="0.9"
            android:layout_marginBottom="@dimen/section_margin_top" /></LinearLayout>    <!-- Loading Elements at Bottom - Responsive -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/section_margin_top"
        android:padding="@dimen/layout_padding">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/section_margin_top"
            android:layout_height="@dimen/section_margin_top"
            android:indeterminate="true"
            android:indeterminateTint="@color/text_on_primary"
            android:layout_marginBottom="@dimen/section_margin_bottom" />

        <TextView
            android:id="@+id/tv_splash_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chargement..."
            android:textSize="@dimen/metric_title_text_size"
            android:textColor="@color/text_on_primary"
            android:alpha="0.8" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
